<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :title %> </title>
    <meta name="viewport">
    <%= render "layouts/head" %>
    <%= render "layouts/shim" %>
  </head>

  <body>
    <%= render "layouts/header" %>
    <%= render "layouts/banner" %>
    <br>
    <div class="container">
      <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <div class="yield"><%= yield %></div>
    </div>
    <%= render "layouts/footer" %>
  </body>
</html>
