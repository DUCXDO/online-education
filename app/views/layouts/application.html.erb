<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :title %> </title>
    <meta name="viewport">
    <%= render "layouts/head" %>
    <%= render "layouts/shim" %>
  </head>

  <body>
    <%= render "layouts/header" %>
    <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
