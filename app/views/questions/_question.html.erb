<div class="row lessons">
  <div class="col col-xl-3 col-lg-12 col-md-12 col-sm-12 col-12" >
    <%= link_to t(".edit"), "#",
      class: "text-uppercase genric-btn primary btn btn-default" %>
    <%= link_to t(".delete"), lesson_question_path(@test.lesson, question),
      class: "text-uppercase genric-btn primary btn btn-default",
      method: :delete, remote: true %>
  </div>

  <div class="col col-xl-9 col-lg-12 col-md-12 col-sm-12 col-12">
    <h6>
      <%= render html: question.content.html_safe %>
    <h6>
  </div>

  <% question.answers.each do |answer| %>
    <div class="col col-xl-4 col-lg-12 col-md-12 col-sm-12 col-12"></div>
    <div class="col col-xl-4 col-lg-12 col-md-12 col-sm-12 col-12">
      <h6>
        <%= render html: answer.content.html_safe %>
      <h6>
    </div>

    <div class="col col-xl-4 col-lg-12 col-md-12 col-sm-12 col-12">
      <h6>
        <%= answer.is_correct %>
      <h6>
    </div>
  <% end %>

  <div class="col col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <hr>
  </div>
</div>
