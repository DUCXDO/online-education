<% provide :title, t(".sign_up") %>
<h1 class="sign-up"><%= t ".sign_up" %></h1>

<% unless logged_in? %>
  <div class="container">
    <div class="col-lg-4 col-md-6 search-course-right signup-form">
      <%= form_with model: @user, url: signup_path,
        local: true, class: "form-wrap" do |f| %>
        <%= render "shared/error_messages", object: f.object %><br>

        <%= f.label :first_name, t(".first_name"), class: "required" %>
        <%= f.text_field :first_name, class: "form-control", required: true %>

        <%= f.label :last_name, t(".last_name"), class: "required" %>
        <%= f.text_field :last_name, class: "form-control", required: true %>

        <%= f.label :email, t(".email"), class: "required" %>
        <%= f.text_field :email, class: "form-control" %>

        <%= f.label :birthday, t(".birthday") %>
        <%= f.date_field :birthday, class: "form-control" %>

        <%= f.label :password, t(".password"), class: "required" %>
        <%= f.password_field :password, class: "form-control", required: true,
          placeholder: t(".password") %>

        <%= f.label :password_confirmation, t(".password_confirm"), class: "required" %>
        <%= f.password_field :password_confirmation, class: "form-control",
          required: true %>

        <%= f.submit t(".create_my_acc"),
          class: "primary-btn text-uppercase" %>
      <% end %>
    </div>
  </div>
<% end %>
