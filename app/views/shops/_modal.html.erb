<div id="myModal" class="modal fade stay-away" role="dialog" >
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <span><%= t ".create_an_account" %></span>
        <button type="button" class="close" data-dismiss="modal">
          &times;
        </button>
      </div>
      <div class="modal-body">
        <div>
          <p><%= t ".need_an_account" %></p>
          <%= link_to "#", class: "btn btn-primary", type: "button" do %>
            <%= t ".continue_with_facebook" %>
          <% end %><br>
          <p>
            <%= t ".already_have_an_account" %>
            <%= link_to t(".log_in"), "#" %>
          </p>
        </div>
      </div>
      <div class="modal-footer">
        <%= link_to t(".add_to_cart"), "#", class: "primary-btn text-uppercase" %>
        <button type="button" class="btn btn-default" data-dismiss="modal">
          <%= t ".close" %>
        </button>
      </div>
    </div>
  </div>
</div>
